.container
  .row
    .column.grid_12
      %h1 Sign in

      = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        .email
          = f.label :email
          %br/
          = f.email_field :email

        .password
          = f.label :password
          %br/
          = f.password_field :password

        .remember_me
          = f.check_box :remember_me
          = f.label :remember_me

        .submit
          = f.submit "Sign in"


      = render 'links'
